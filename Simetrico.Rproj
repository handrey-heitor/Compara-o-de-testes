set.seed(42)

# Tamanho de cada grupo
n <- 500

# Gerar valores para os dois grupos
grupo_1 <- rnorm(n, mean = 50, sd = 10)
grupo_2 <- rnorm(n, mean = 55, sd = 10)

# Criar o data frame
df_base <- data.frame(
  grupo = c(rep("Grupo_A", n), rep("Grupo_B", n)),
  valor = c(grupo_1, grupo_2)
)

# Visualizar os primeiros dados
head(df_base)

write.csv(df_base, "C:/Users/handr/Downloads/dados_simulados.csv", row.names = FALSE)

